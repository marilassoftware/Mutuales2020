@model IEnumerable<Mutuales2020.Web.Data.Entities.Affiliate>

@{
    ViewData["Title"] = "Index";
}

<h2>Afiliados</h2>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Products</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="AffiliatesTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.intCodigoSoc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.strNombreAfi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.strApellidoAfi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.intAnoAfi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.intMesAfi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.strCodigoMut)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.intCodigoSoc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.strNombreAfi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.strApellidoAfi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.intAnoAfi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.intMesAfi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.strCodigoMut)
                                </td>
                                <td>
                                    @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
    	$(document).ready(function () {
        	$('#AffiliatesTable').DataTable();
    	});
    </script>
}
